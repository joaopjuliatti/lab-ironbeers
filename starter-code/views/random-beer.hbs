<div>
    {{#each randomBeer}}
    <div>
        <div>
            <img src={{this.image_url}}>
        </div>
        <div>
            <h1>{{this.name}}</h1>
            <p>{{this.tagline}}</p>
            <p>{{this.description}}</p>
            <h2>Food Pairing</h2>
            <ul>
            {{#each food_pairing}}
                <li>{{this}}</li>
            {{/each}}
            </ul>
            <p><span style="font-weight:bold;">Brewers Tips: </span>{{this.brewers_tips}}</p>
        </div>

    </div>
    {{/each}}
</div>